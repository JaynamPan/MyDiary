<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.95"
    android:background="@android:color/white"
    android:minHeight="45dp">


    <ImageView
        android:id="@+id/IV_memo_item_add_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_add_white_24dp"
        app:tint="@color/memo_icon_tint" />


    <TextView
        android:id="@+id/TV_memo_item_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/IV_memo_item_add_icon"
        android:gravity="center_vertical"
        android:text="@string/memo_item_add"
        android:textStyle="bold"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/topic_divider" />

</RelativeLayout>
